                        Ofrecer Producto o Servicio
                    </button>

                    <!-- Modal -->
                    <div class="modal fade custom-fade" id="productosModal" tabindex="-1" aria-labelledby="productosModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">

                                <div class="modal-header">
                                    <h5 class="modal-title" id="productosModalLabel">Oferta de Productos o Servicios</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>

                                <div class="modal-body">
                                    <form id="formOfertas" method="POST" action="/colaborarPersonaJuridica/ofertaProducto" enctype="multipart/form-data">
                                        <!-- Campo para el nombre de la oferta -->
                                        <div class="mb-3">
                                            <label for="inputNombreOferta" class="form-label">Nombre de la oferta</label>
                                            <input name="nombreOferta" type="text" class="form-control" id="inputNombreOferta" placeholder="Ingrese el nombre de la oferta" required>
                                        </div>

                                        <div class="mb-3">
                                            <label for="inputRubro" class="form-label">Rubro de la oferta</label>
                                            <input name="rubro" type="text" class="form-control" id="inputRubro" placeholder="Ingrese el rubro de la oferta" required>
                                        </div>

                                        <div class="mb-3">
                                            <label for="cantidadProducto" class="form-label">Stock de la oferta</label>
                                            <input name="stock" type="text" class="form-control" id="cantidadProducto" placeholder="1" required>
                                        </div>


                                        <div class="mb-3">
                                            <label for="inputTipoOferta" class="form-label">Tipo de Oferta</label>
                                            <select name="tipoOferta" id="inputTipoOferta" class="form-select">
                                                {{#each tipoOferta}}
                                                    <option value="{{this}}">{{this}}</option>
                                                {{/each}}
                                            </select>
                                        </div>

                                        <!-- Campo para la cantidad de puntos necesarios -->
                                        <div class="mb-3">
                                            <label for="inputPuntosOferta" class="form-label">Puntos necesarios</label>
                                            <input name="puntosNecesarios" type="number" class="form-control" id="inputPuntosOferta" placeholder="Ingrese la cantidad de puntos" required>
                                        </div>

                                        <!-- Campo opcional para subir una imagen ilustrativa -->
                                        <div class="mb-3">
                                            <label for="inputImagenOferta" class="form-label">Imagen ilustrativa (opcional)</label>
                                            <input name="imagen" type="file" class="form-control" id="inputImagenOferta" accept="image/*">
                                        </div>

                                        <!-- Botones para confirmar o cancelar -->
                                        <div class="d-flex justify-content-between">
                                            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                                            <button type="submit" class="btn btn-success">Confirmar</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
