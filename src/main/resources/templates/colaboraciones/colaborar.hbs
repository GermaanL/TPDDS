                                    <form method="POST" action="/colaborar/registroPersonaVulnerable" class="m-auto">
                                        <!-- Nombre -->
                                        <div class="mb-3">
                                            <label for="inputNombre" class="form-label">Nombre</label>
                                            <input name="nombre" type="text" class="form-control" id="inputNombre" placeholder="Jhon">
                                        </div>

                                        <!-- Apellido -->
                                        <div class="mb-3">
                                            <label for="inputApellido" class="form-label">Apellido</label>
                                            <input name="apellido" type="text" class="form-control" id="inputApellido" placeholder="Doe">
                                        </div>

                                        <div class="mb-3">
                                            <label for="inputCantACargo" class="form-label">Cantidad de menores a cargo</label>
                                            <input name="cantMenoresACargo" type="text" class="form-control" id="inputCantACargo" placeholder="5">
                                        </div>

                                        <!-- Fecha de Nacimiento y Situacion de Calle -->
                                        <div class="row g-3 mb-3">
                                            <div class="col-md-6">
                                                <label for="inputFechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                                                <input name="fechaNacimiento" type="date" class="form-control" id="inputFechaNacimiento">
                                            </div>
                                            <div class="col-md-6 d-flex align-items-end justify-content-center">
                                                <div class="form-check">
                                                    <input name="estaEnSituacionDeCalle" class="form-check-input" type="checkbox" id="inlineFormCheck">
                                                    <label class="form-check-label ms-2" for="inlineFormCheck">Situación de Calle</label>
                                                </div>
                                            </div>
                                        </div>

