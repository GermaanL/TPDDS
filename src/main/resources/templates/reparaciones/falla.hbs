{{#partial "contenido"}}
    <section class="container">

        <div class="container mt-4">
            <h2 class="text-center mb-4">Detalles de la Falla</h2>

            <div class="mb-4">
                <p><strong>Heladera:</strong> {{incidente.heladeraAfectada.nombre}}</p>
                <p><strong>Fecha de Alta:</strong> {{incidente.fechaAlta}}</p>
                <p><strong>Tipo de Incidente:</strong> {{incidente.tipoIncidente}}</p>
                <p><strong>Descripción:</strong> {{incidente.descripcion}}</p>
                {{#if incidente.imagen not null}}
                    <img src="/uploads/reportes/{{incidente.imagen}}" alt="{{incidente.imagen}}" class="img-fluid rounded shadow">
                {{/if}}
            </div>

            <div class="text-center">
                <button type="button" class="btn btn-custom" data-bs-toggle="modal" data-bs-target="#registrarVisitaModal">
                    Registrar Visita Tecnica
                </button>
            </div>
        </div>



        <!-- Modal -->
        <div class="modal fade custom-fade" id="registrarVisitaModal" tabindex="-1" aria-labelledby="registrarVisitaModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">


                    <div class="modal-header">
                        <h5 class="modal-title">Registrar Visita Técnica</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        <form method="POST" action="/misReparaciones/realizarVisita" enctype="multipart/form-data">

                            <input type="hidden" name="id_incidente" value="{{incidente.id}}">

                            <div class="mb-3">
                                <label for="fechaVisita" class="form-label">Fecha y Hora de la Visita</label>
                                <input type="datetime-local" name="fechaVisita" class="form-control" placeholder="Seleccione la fecha y hora">
                            </div>

                            <div class="mb-3">
                                <label for="observaciones" class="form-label">Observaciones</label>
                                <textarea name="observaciones" class="form-control" rows="3" placeholder="Ingrese observaciones"></textarea>
                            </div>

                            <div class="mb-3">
                                <label for="incidenteSolucionado" class="form-label">Incidente Solucionado</label>
                                <select name="incidenteSolucionado" class="form-select">
                                    <option value="true">Sí</option>
                                    <option value="false">No</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="foto" class="form-label">Subir Foto</label>
                                <input id="foto" type="file" name="imagen" class="form-control" accept="image/*">
                            </div>

                            <div class="d-flex justify-content-between">
                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancelar</button>
                                <button type="submit" class="btn btn-success">Registrar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{{/partial}}
{{> templates/index}}